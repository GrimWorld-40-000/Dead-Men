        <graphicData>
            <texPath>Weapons/DKoK_Shovel</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Industrial</techLevel>
        <statBases>
            <WorkToMake>4000</WorkToMake>
            <Mass>2</Mass>
        </statBases>
        <equippedAngleOffset>-65</equippedAngleOffset>
        <recipeMaker>
            <researchPrerequisite>GW_AM_MilitariumArmor</researchPrerequisite>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>HP_AM_MilitarumFabricationBench</li>
            </recipeUsers>
            <displayPriority>400</displayPriority>
        </recipeMaker>
        <stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
        <costStuffCount>40</costStuffCount>
        <costList>
            <WoodLog>20</WoodLog>
        </costList>
        <weaponTags>
            <li>IndustrialMeleeDecent</li>
            <li>GW_AM_IndustrialMelee</li>
