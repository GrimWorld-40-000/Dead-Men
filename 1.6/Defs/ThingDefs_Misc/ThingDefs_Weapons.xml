<Defs>
    <ThingDef ParentName="GW_HOI_LasgunBase">
        <defName>GW_HOI_DM_Gun_Lucius</defName>
        <label>Lasgun Lucius no.98 pattern</label>
        <description>Drawing power from standard packs, this lasgun operates at a higher output for a slightly harder punch. The downside is that it drains its power packs more quickly. Its attached bayonet provides additional versatility in close-quarters combat.</description>
        <graphicData>
            <drawSize>1.2</drawSize>
            <texPath>Weapons/DKoK_Lucius_Lasgun</texPath>
        </graphicData>
        <statBases>
            <WorkToMake>17000</WorkToMake>
            <Mass>3.7</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.65</AccuracyMedium>
            <AccuracyLong>0.55</AccuracyLong>
            <RangedWeapon_Cooldown>1.00</RangedWeapon_Cooldown>
            <MarketValue>450</MarketValue>
        </statBases>
        <costList>
            <Steel>65</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <weaponClasses>
            <li>LongShots</li>
        </weaponClasses>
        <weaponTags>
            <li>GW_HOI_DM_Lasgun</li>
            <li>SpacerGun</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_Lasgun</defaultProjectile>
                <warmupTime>1.05</warmupTime>
                <range>30.0</range>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
                <soundCast>GW_AM_Gun_Kantrael</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>12</muzzleFlashScale>
            </li>
        </verbs>
		<recipeMaker>
            <researchPrerequisite>GW_AM_DeathKorpsOfKrieg</researchPrerequisite>
		</recipeMaker>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>bayonet</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>16</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.35</armorPenetration>
            </li>
        </tools>
    </ThingDef>

